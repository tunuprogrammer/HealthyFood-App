<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6D9D9"
    tools:context=".leukemia">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimaryDark"
        android:minHeight="?attr/actionBarSize"
        app:titleTextColor="@color/colorwhite"
        app:title="LEUKEMIA DISEASE"
        app:titleMarginStart="90dp"
        android:theme="@style/AppTheme"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/linearLayout1"
                android:layout_width="match_parent"
                android:background="@drawable/leukem1"
                android:orientation="vertical"
                android:layout_below="@+id/toolbar"
                android:layout_height="150dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Leukemia"
                android:textColor="#591E1A"
                android:textSize="25sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/leuk1"
                android:textColor="@color/colorPrimary"
                android:textSize="17sp"/>
            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="270dp"
                android:background="@drawable/leukem2"
                android:orientation="vertical"
                android:layout_marginLeft="25dp"
                android:layout_height="150dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Causes"
                android:textColor="#591E1A"
                android:textSize="25sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/leuk2"
                android:textColor="@color/colorPrimary"
                android:textSize="17sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/leukfood"
                android:textColor="#591E1A"
                android:textSize="25sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/f1"
                android:textColor="#0E1E8A"
                android:textSize="20dp"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/f11"
                android:textColor="@color/colorPrimary"
                android:textSize="17sp"/>
            <LinearLayout
                android:id="@+id/linearLayout3"
                android:layout_width="270dp"
                android:background="@drawable/vege1"
                android:orientation="vertical"
                android:layout_marginLeft="42dp"
                android:layout_height="130dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/f2"
                android:textColor="#0E1E8A"
                android:textSize="20dp"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/f22"
                android:textColor="@color/colorPrimary"
                android:textSize="17sp"/>
            <LinearLayout
                android:id="@+id/linearLayout4"
                android:layout_width="270dp"
                android:background="@drawable/water"
                android:orientation="vertical"
                android:layout_marginLeft="47dp"
                android:layout_height="130dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/f3"
                android:textColor="#0E1E8A"
                android:textSize="20dp"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/f4"
                android:textColor="@color/colorPrimary"
                android:textSize="17sp"/>

            <LinearLayout
                android:id="@+id/linearLayout5"
                android:layout_width="270dp"
                android:layout_height="110dp"
                android:layout_marginLeft="35dp"
                android:background="@drawable/meat"
                android:orientation="vertical" />

        </LinearLayout>
    </ScrollView>
</RelativeLayout>