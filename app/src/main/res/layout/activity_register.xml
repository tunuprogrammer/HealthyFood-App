<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".register">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@drawable/cross_ic"
                android:orientation="vertical">
            </LinearLayout>

            <LinearLayout
                android:layout_width="340dp"
                android:layout_height="match_parent"
                android:layout_marginTop="28dp"
                android:orientation="vertical"
                android:layout_marginLeft="30dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="FILL YOUR DETAILS"
                    android:textSize="26sp"
                    android:fontFamily="serif"
                    android:textColor="#020101"
                    android:textStyle="bold"
                    android:layout_marginBottom="20dp"
                    android:layout_marginLeft="31dp"/>

                <EditText
                    android:id="@+id/name"
                    android:hint="Your name"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:fontFamily="serif"
                    android:textSize="18sp"
                    android:background="@drawable/textviewcard"/>

                <EditText
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:ems="10"
                    android:fontFamily="serif"
                    android:hint="Email"
                    android:inputType="textEmailAddress"
                    android:textSize="18sp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/textviewcard"/>
                <EditText
                    android:id="@+id/password1"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:ems="10"
                    android:fontFamily="serif"
                    android:hint="@string/pword"
                    android:inputType="textPassword"
                    android:textSize="18sp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/textviewcard"/>

                <EditText
                    android:id="@+id/password2"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:ems="10"
                    android:fontFamily="serif"
                    android:hint="Confirm Password"
                    android:inputType="textPassword"
                    android:textSize="18sp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/textviewcard"/>
                <EditText
                    android:id="@+id/phn"
                    android:hint="Phone Number"
                    android:inputType="number"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:fontFamily="serif"
                    android:digits="0123456789"
                    android:maxLength="10"
                    android:textSize="18sp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/textviewcard"/>

                <Button
                    android:id="@+id/register"
                    android:layout_width="255dp"
                    android:layout_height="59dp"
                    android:layout_marginTop="22dp"
                    android:layout_marginLeft="50dp"
                    android:background="@drawable/registerbtn"
                    android:fontFamily="@font/abhaya_libre_bold"
                    android:text="@string/register"
                    android:textColor="#000000"
                    android:textSize="34sp"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
