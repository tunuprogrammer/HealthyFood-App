<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6D9D9"
    tools:context=".diabetes">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimaryDark"
        android:minHeight="?attr/actionBarSize"
        app:titleTextColor="@color/colorwhite"
        app:title="DIABETES DISEASE"
        app:titleMarginStart="70dp"
        android:theme="@style/AppTheme"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Diabetes"
                android:textColor="#591E1A"
                android:textSize="25sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dia"
                android:textColor="@color/colorPrimary"
                android:textSize="17sp"/>
            <LinearLayout
                android:id="@+id/linearLayout5"
                android:layout_width="270dp"
                android:background="@drawable/diabe"
                android:orientation="vertical"
                android:layout_marginLeft="25dp"
                android:layout_height="110dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dia2"
                android:textColor="#591E1A"
                android:textSize="25sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dia3"
                android:textColor="@color/colorPrimary"
                android:textSize="17sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dia4"
                android:textColor="#591E1A"
                android:textSize="25sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dia5"
                android:textColor="@color/colorPrimary"
                android:textSize="17sp"/>
            <LinearLayout
                android:id="@+id/linearLayout6"
                android:layout_width="270dp"
                android:background="@drawable/insulin"
                android:orientation="vertical"
                android:layout_marginLeft="25dp"
                android:layout_height="100dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dia6"
                android:textColor="#591E1A"
                android:textSize="25sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dia7"
                android:textColor="#0E1E8A"
                android:textSize="20dp"
                android:textStyle="bold"/>
                <LinearLayout
                    android:id="@+id/linearLayout4"
                    android:layout_width="200dp"
                    android:orientation="vertical"
                    android:layout_marginLeft="50dp"
                    android:background="@drawable/diafud"
                    android:layout_height="80dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dia8"
                android:textColor="#0E1E8A"
                android:textSize="20dp"
                android:textStyle="bold"/>
            <LinearLayout
                android:id="@+id/linearLayout7"
                android:layout_width="270dp"
                android:background="@drawable/alcohol"
                android:orientation="vertical"
                android:layout_marginLeft="25dp"
                android:layout_height="110dp"/>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>